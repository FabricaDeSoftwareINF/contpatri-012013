<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/borda_login"
            android:gravity="center"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/login_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    style="@style/LoginFormContainer"
                    android:layout_width="match_parent"
                    android:layout_height="427dp"
                    android:layout_gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/contPatriTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contpatri_maiusculo"
                        android:textAppearance="?android:attr/textAppearanceLarge" 
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"/>

                    <ImageView
                        android:id="@+id/lupaImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/lupa" 
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/controlePatrimonioTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/controle_patrimonio"
                        android:textAppearance="?android:attr/textAppearanceLarge" 
                        android:layout_gravity="center"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </FrameLayout>